{
  "name": "@codespin/codebox",
  "version": "0.0.12",
  "description": "An MCP server for executing commands in Docker containers",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rm -rf ./dist",
    "build": "npm run clean && npx tsc",
    "start": "node dist/index.js",
    "test": "npm run build && npx mocha \"dist/test/**/*.test.js\" \"dist/test/*.test.js\" \"dist/src/test/**/*.test.js\" \"dist/src/test/*.test.js\"",
    "test:init": "npm run build && npx mocha \"dist/test/init*.test.js\"",
    "test:execute": "npm run build && npx mocha \"dist/src/test/tools/execute.test.js\"",
    "test:grep": "npm run build && npx mocha \"dist/test/**/*.test.js\" \"dist/test/*.test.js\" \"dist/src/test/**/*.test.js\" \"dist/src/test/*.test.js\" --grep"
  },
  "bin": {
    "codebox": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "mcp",
    "docker",
    "ai"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^5.0.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.14.1",
    "@types/sinon": "^17.0.4",
    "@types/source-map-support": "^0.5.10",
    "@types/uuid": "^10.0.0",
    "chai": "^5.1.2",
    "mocha": "^11.0.1",
    "sinon": "^20.0.0",
    "source-map-support": "^0.5.21",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.9.0",
    "@types/yargs": "^17.0.33",
    "uuid": "^9.0.1",
    "yargs": "^17.7.2"
  }
}